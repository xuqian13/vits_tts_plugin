{
  "manifest_version": 1,
  "name": "VITS TTS 语音合成插件",
  "version": "1.0.0",
  "description": "基于 artrajz-vits-simple-api 的文本转语音插件，支持多种语言和音色，为 MaiCore 提供高质量的语音合成功能。",
  "author": {
    "name": "靓仔",
    "url": ""
  },
  "license": "MIT",
  "homepage_url": "",
  "repository_url": "",
  "keywords": [
    "TTS",
    "语音合成",
    "VITS",
    "多语言",
    "多音色",
    "语音",
    "AI",
    "文本转语音"
  ],
  "categories": [
    "语音",
    "AI",
    "聊天增强",
    "娱乐"
  ],
  "host_application": {
    "min_version": "0.9.0",
    "max_version": "0.9.0"
  },
  "default_locale": "zh-CN",
  "plugin_info": {
    "is_built_in": false,
    "plugin_type": "general",
    "components": [
      {
        "type": "action",
        "name": "vits_tts_action",
        "description": "智能语音合成Action，支持关键词自动触发，使用VITS模型将文本转换为语音"
      },
      {
        "type": "command",
        "name": "vits_tts_command",
        "description": "手动语音合成Command，通过/vits命令触发，支持指定音色ID参数"
      }
    ],
    "features": [
      "多语言支持（中文、英文、日文等）",
      "多种音色选择（通过ID参数）",
      "双模式触发（智能触发和手动触发）",
      "配置灵活，支持自定义API地址",
      "完善的错误处理和日志记录",
      "异步处理，性能优秀"
    ],
    "dependencies": {
      "python": ["aiohttp"],
      "system": [],
      "plugins": []
    },
    "api_info": {
      "provider": "artrajz-vits-simple-api",
      "endpoint": "https://artrajz-vits-simple-api.hf.space/voice/vits",
      "authentication": "无需认证",
      "rate_limit": "根据API提供商限制"
    }
  },
  "configuration": {
    "config_file": "config.toml",
    "auto_generate": true,
    "sections": [
      {
        "name": "plugin",
        "description": "插件基本配置"
      },
      {
        "name": "components",
        "description": "组件启用控制"
      },
      {
        "name": "vits",
        "description": "VITS API配置"
      }
    ]
  },
  "supported_languages": [
    {
      "code": "zh",
      "name": "中文",
      "status": "完全支持"
    },
    {
      "code": "ja",
      "name": "日文",
      "status": "完全支持"
    },
    {
      "code": "en",
      "name": "英文",
      "status": "API限制"
    }
  ],
  "voice_options": [
    {
      "id": "0",
      "name": "默认音色",
      "language": "中文",
      "description": "标准中文音色"
    },
    {
      "id": "1",
      "name": "音色1",
      "language": "中文",
      "description": "备选中文音色"
    },
    {
      "id": "2",
      "name": "音色2",
      "language": "中文/日文",
      "description": "支持中日文的音色"
    }
  ],
  "usage_examples": [
    {
      "type": "action",
      "description": "关键词自动触发",
      "example": "用户：用语音说一下今天的天气\n麦麦：[发送语音消息]"
    },
    {
      "type": "command",
      "description": "基础命令",
      "example": "/vits 你好，世界！"
    },
    {
      "type": "command",
      "description": "指定音色",
      "example": "/vits 今天天气不错 1"
    },
    {
      "type": "command",
      "description": "日文语音",
      "example": "/vits こんにちは 2"
    }
  ]
}
